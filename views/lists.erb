<ul id="lists">
  <% @lists.map.with_index do |list, idx| %>
      <li class="<%= list_class(list) %>">
      <a href="/lists/<%= idx %>">
        <h2><%= list[:name] %></h2>
        <p>
          <%= uncompleted_todos_count(list)%> / <%= total_todos_count(list) %>
        </p>
      </a>
      </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="list" href="/lists/new">New list</a>
<% end %>