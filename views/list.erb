<section id="todos">
  <header>
    <h2><%= list_name %></h2>
    <ul>
      <li>
        <a class="edit" href="/lists/<%= list_id %>/edit">Edit
        List</a>
      </li>
    </ul>
  </header>

  <ul>
    <% list[:todos].each_with_index do |todo, idx| %>
      <li>
        <h3><%= todo[:name] %></h3>
          <form action="/lists/<%= list_id %>/todos/<%= idx %>" method="post" class="delete">
            <button type="submit">Delete</button>
		      </form>
      </li>
    <% end %>
  </ul>
</section>

<% content_for :header_links do %>
  <a href="/lists">All Lists</a>
<% end %>

<form action="/lists/<%= list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo_name" placeholder="Todo name" type="text" value="">
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>
